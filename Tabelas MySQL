CREATE DATABASE IF NOT EXISTS `sono_musics`;

USE `sono_musics`;

CREATE TABLE `favoritos` (
  `id` int NOT NULL AUTO_INCREMENT,
  `usuario_id` int NOT NULL,
  `musica_id` int NOT NULL,
  `data_adicionado` datetime DEFAULT CURRENT_TIMESTAMP,
  PRIMARY KEY (`id`),
  UNIQUE KEY `unique_fav` (`usuario_id`, `musica_id`),
  KEY `fav_musica_id` (`musica_id`),
  CONSTRAINT `favoritos_usuario_fk`
    FOREIGN KEY (`usuario_id`) REFERENCES `usuarios` (`id`) ON DELETE CASCADE,
  CONSTRAINT `favoritos_musica_fk`
    FOREIGN KEY (`musica_id`) REFERENCES `musicas` (`id`) ON DELETE CASCADE
) ENGINE=InnoDB;

CREATE TABLE `musicas` (
  `id` int NOT NULL AUTO_INCREMENT,
  `titulo` varchar(255) NOT NULL,
  `artista` varchar(255) NOT NULL,
  `genero` varchar(100) DEFAULT NULL,
  `duracao_musica` int unsigned DEFAULT NULL,
  `data_upload` datetime NOT NULL DEFAULT CURRENT_TIMESTAMP,
  `arquivo_mp3` varchar(255) DEFAULT NULL,
  `capa` longblob,
  `usuario_id` int NOT NULL,
  PRIMARY KEY (`id`),
  CONSTRAINT `musica_usuario_fk`
    FOREIGN KEY (`usuario_id`) REFERENCES `usuarios` (`id`)
    ON DELETE CASCADE
) ENGINE=InnoDB;

CREATE TABLE `usuarios` (
  `id` int NOT NULL AUTO_INCREMENT,
  `username` varchar(255) NOT NULL,
  `senha` varchar(255) NOT NULL,
  PRIMARY KEY (`id`),
  UNIQUE KEY `username` (`username`)
) ENGINE=InnoDB;


